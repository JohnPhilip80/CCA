Create mobile_browser_store.py file 
	from flask import Flask,render_template,url_for,redirect,request
	from book_db_repository import BookRepository

	app=Flask(__name__)

	repo = BookRepository(app)

	@app.route('/')
	@app.route('/readBooks')
	def readBooks():
		#return "<h1>Welcome to my Book Application</h1>"
		return render_template("books_read.html",books=repo.read_books())
		
	@app.route('/createBook',methods=['GET','POST'])
	def createBook():
		if request.method == 'POST':
			bk = {
					"title":request.form['title'],
					"author":request.form['author'],
					"price":request.form['price']
				 }
			repo.create_book(bk)
			return redirect(url_for('readBooks'))
		return render_template("book_create.html")

	@app.route('/updateBook/<string:bno>',methods=['GET','POST'])
	def updateBook(bno):
		if request.method == 'POST':
			bk = {
					"bno":bno,
					"title":request.form['title'],
					"author":request.form['author'],
					"price":request.form['price']
				 }
			repo.update_book(bk)
			return redirect(url_for('readBooks'))
		return render_template("book_update.html",book=repo.read_book(bno))

	@app.route('/readBook/<string:bno>')
	def readBook(bno):
		return render_template("book_read.html",book=repo.read_book(bno))

	@app.route('/deleteBook/<string:bno>')
	def deleteBook(bno):
		repo.delete_book(bno)
		return redirect(url_for('readBooks'))

	if(__name__ == '__main__'):
		app.run(debug=True)  





				  
