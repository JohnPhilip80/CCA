	#from mobile_ls_repository import MobileRepository
	from mobile_db_repository import MobileRepository
	repo = MobileRepository()

	def showHeading():
		print("Id".ljust(5),"Brand".ljust(20) , "Owner".ljust(15),"Price".ljust(10))

	def readMobiles():
		showHeading()
		mobiles = repo.read_mobiles()
		for mob in mobiles:
			print(str(mob["id"]).ljust(5),mob["brand"].ljust(20) , mob["owner"].ljust(15),str(mob["price"]).ljust(10))
			
	def createMobile():
		brand = input("Enter New Mobile Brand:")
		owner = input("Enter New Mobile Owner:")
		price = input("Enter New Mobile Price:")
		mob = {
				"brand":brand,
				"owner":owner,
				"price":price
			 }
		print(repo.create_mobile(mob))

	def updateMobile():
		id = input("Enter Mobile Id to Modify:")
		brand = input("Enter Updated Mobile Brand:")
		owner = input("Enter Updated Mobile Owner:")
		price = input("Enter Updated Mobile Price:")
		mob = {
				"id":id,
				"brand":brand,
				"owner":owner,
				"price":price
			 }
		print(repo.update_mobile(mob))
		
	def deleteMobile():
		id = input("Enter Mobile Id to Remove:")
		print(repo.delete_mobile(id))

	def readMobile():
		id = input("Enter Mobile Id to Read:")
		print(repo.read_mobile(id))
		
	choice = 0
	while choice!=6:
		choice = int(input("\n1.Create Mobile \n2.Read Mobile \n3.Update Mobile \n4.Delete Mobile \n5.Mobile Detail \n6.Exit. \nEnter Your Choice:"))
		if choice == 1:
			createMobile()
		elif choice == 2:
			readMobiles()
		elif choice == 3:
			updateMobile()
		elif choice == 4:
			deleteMobile()
		elif choice == 5:
			readMobile()
		else:
			print("Exiting the Program")
			choice = 6

Create mobile_ls_repository.py 
	class MobileRepository:
    def __init__(self):
        self.mobileList = [
            {"id":"1001", "brand":"Samsung","owner":"Kalyani","price":"45000"},
            {"id":"1002", "brand":"Apple","owner":"Sri Devi","price":"67000"},
            {"id":"1003", "brand":"Redmi","owner":"Shwetha","price":"39000"},
            {"id":"1004", "brand":"Motorola","owner":"Meena Kumari","price":"15200"}
        ]
        self.nextMobileId = 1005

    def read_mobiles(self):
        return self.mobileList;

    
    def read_mobile(self,id): 
        found_mobile = None
        for mob in self.mobileList:
            if mob["id"] == str(id):
                found_mobile = mob
                break
        if found_mobile:
            return found_mobile
        else:
            return {"message":"Mobile Not Found"}

    def create_mobile(self,mob):
        self.mobileList.append(
        {
            "id":str(self.nextMobileId),
            "brand":mob["brand"],
            "owner":mob["owner"],
            "price":mob["price"]
        })
        self.nextMobileId = self.nextMobileId + 1
        return {"message":"Mobile Created Successfully"}

    def update_mobile(self,pmob):
        for mob in self.mobileList:
            if mob["id"] == pmob["id"]:
                mob["brand"] = pmob["brand"]
                mob["owner"] = pmob["owner"]
                mob["price"] = pmob["price"]
                break
        return {"message":"Mobile Updated Sucessfully"}

    def delete_mobile(self,id):
        found_mobile = False
        for mob in self.mobileList:
            if mob["id"] == str(id):
                found_mobile = True
                self.mobileList.remove(mob)
                break
        if found_mobile:
            return {"message":"Mobile Deleted Successfully"}
        else:
            return {"message":"Mobile Not Found"}


Create Table mobile in MySQL
	CREATE TABLE mobile (id BIGINT PRIMARY KEY AUTO_INCREMENT,
	brand VARCHAR(30),
	owner VARCHAR(40),
	price DECIMAL(10,2));


Install mysql 
	pip install mysql-connector-python

Create file mobile_db_repository.py 
	import mysql.connector

	class MobileRepository:
		def open_connection(self):
			try:
				self.connection = mysql.connector.connect(
					host="localhost",
					user="root",
					password="Admin@123",
					database="john_mobile"
				)
			except mysql.connector.Error as err:
				print(f"Error connecting to MySQL: {err}")
				
		def __init__(self):
			pass
			
		def read_mobiles(self):
			self.open_connection()
			cursor = self.connection.cursor(dictionary=True)
			try:
				sql="SELECT id,brand,owner,price FROM mobile"
				cursor.execute(sql)
				res=cursor.fetchall()
				return res
			except mysql.connector.Error as err:
				print(f"Error executing query: {err}")
				self.connection.rollback()
				return None
			finally:
				cursor.close()
				self.connection.close()
			return res
		
		def create_mobile(self,mob):
			self.open_connection()
			cursor = self.connection.cursor(dictionary=True)
			try:
				sql="INSERT INTO mobile (brand,owner,price) VALUES (%s,%s,%s)"
				cursor.execute(sql,(mob["brand"],mob["owner"],mob["price"]))
				self.connection.commit()
				return {"message":"Mobile Created Successfully"}
			except mysql.connector.Error as err:
				self.connection.rollback()
				return {"message":f"Error executing insert query: {err}"}
			finally:
				cursor.close()
				self.connection.close()
		
		
		def update_mobile(self,mob):
			self.open_connection()
			cursor = self.connection.cursor(dictionary=True)
			try:
				sql="UPDATE mobile SET brand=%s, owner=%s, price=%s WHERE id=%s"
				cursor.execute(sql,(mob["brand"],mob["owner"],mob["price"],mob["id"]))
				self.connection.commit()
				return {"message":"Mobile Updated Successfully"}
			except mysql.connector.Error as err:
				self.connection.rollback()
				return {"message":f"Error executing update query: {err}"}
			finally:
				cursor.close()
				self.connection.close()

		def read_mobile(self,id):
			self.open_connection()
			cursor = self.connection.cursor(dictionary=True)
			try:
				sql="SELECT * FROM mobile WHERE id = %s"
				cursor.execute(sql,(id,))
				res=cursor.fetchone()
				return res
			except mysql.connector.Error as err:
				print(f"Error executing read query: {err}")
				self.connection.rollback()
				return None
			finally:
				cursor.close()
				self.connection.close()
			return res
			
		def delete_mobile(self,id):
			self.open_connection()
			cursor = self.connection.cursor(dictionary=True)
			try:
				sql="DELETE FROM mobile WHERE id = %s"
				cursor.execute(sql,(id,))
				self.connection.commit()
				return {"message":"Mobile Deleted Successfully"}
			except mysql.connector.Error as err:
				self.connection.rollback()
				return {"message":f"Error executing Delete query: {err}"}
			finally:
				cursor.close()
				self.connection.close()
			return res
			

Command Prompt -> pip install flask

Create file mobile_rest_store.py
	from flask import Flask,request,jsonify
	from mobile_db_repository import MobileRepository
	#from mobile_ls_repository import MobileRepository

	app=Flask(__name__)

	repo = MobileRepository()

	@app.route('/')
	@app.route('/readMobiles',methods=['GET'])
	def readMobiles():
		return jsonify(repo.read_mobiles())
		
	@app.route('/createMobile',methods=['POST'])
	def createBook():
		repo.create_mobile(request.get_json())
		return jsonify({"message":"Mobile Created Successfully"})

	@app.route('/updateMobile',methods=['PUT'])
	def updateBook():
		repo.update_book(request.get_json())
		return jsonify({"message":"Mobile Updated Successfully"})

	@app.route('/readMobile/<string:id>',methods=['GET'])
	def readMobile(id):
		return jsonify(repo.read_mobile(id))

	@app.route('/deleteMobile/<string:id>',methods=['DELETE'])
	def deleteMobile(id):
		repo.delete_mobile(id)
		return jsonify({"message":"Mobile Deleted Successfully"})
		
	if(__name__ == '__main__'):
		app.run(debug=True)  

