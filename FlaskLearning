	#from ls_repository import MobileRepository
	from db_repository import MobileRepository
	repo = MobileRepository()


	def showMobiles():
		mobiles = repo.readMobiles()
		print("Id".ljust(10),"Brand".ljust(20),"Owner".ljust(30),"Price".ljust(10))
		for mob in mobiles:
			print(str(mob["id"]).ljust(10), mob["brand"].ljust(20), mob["owner"].ljust(30), str(mob["price"]).ljust(10))

	def showMobile():
		id=input("Enter Mobile It to Show:")
		print(repo.readMobile(id))

	def createMobile():
		brand=input("Enter Mobile Brand:")
		owner=input("Enter Mobile Owner:")
		price=input("Enter Mobile Price:")
		print(repo.insertMobile(brand,owner,price))

	def updateMobile():
		id=input("Enter Mobile Id to update:") 
		brand=input("Enter new Mobile Brand:")
		owner=input("Enter new Mobile Owner:")
		price=input("Enter new Mobile Price:")
		print(repo.modifyMobile(id,brand,owner,price))

	def deleteMobile():
		id=input("Enter Mobile Id to delete:") 
		print(repo.removeMobile(id))

	choice = 0
	while choice!=6:
		choice = int(input("1.Create, 2.Read All, 3. Update, 4. Delete, 5. Read One, 6. Exit. Enter your Choice:"))
		if choice == 1:
			createMobile()
		elif choice == 2:
			showMobiles()
		elif choice == 3:
			updateMobile()
		elif choice == 4:
			deleteMobile()
		elif choice ==5:
			showMobile()
		else:
			print("Exiting the program")
			choice = 6

Create ls_repository.py 
	class MobileRepository:
		def __init__(self):
			self.mobileList = [
				{
					"id":"1001","brand":"Samsung","owner":"John","price":"45000"
				 },
				 {
					 "id":"1002","brand":"Apple", "owner":"Lakshmi","price":"65000"
				 },
				 {
					 "id":"1003","brand":"Redmi", "owner":"Saraswathi","price":"34500"
				 }
			]
			self.nextMobileId = 1004
		def readMobiles(self):
			return self.mobileList
		
		def readMobile(self,id):
			mobileFound = None
			for mob in self.mobileList:
				if mob["id"] == str(id):
					mobileFound = mob
					break
			if mobileFound:
				return mobileFound
			else:
				return {"message":"Mobile not Found!"}
		
		def insertMobile(self,br,ow,pr):
			mob={
				"id":str(self.nextMobileId),
				"brand":br,
				"owner":ow,
				"price":pr
			}
			self.mobileList.append(mob)
			self.nextMobileId = self.nextMobileId + 1
			return {"message":"Mobile Added Successfully!"}

		def modifyMobile(self,id,br,ow,pr):
			mobileFound = None
			for mob in self.mobileList:
				if mob["id"]== str(id):
					mobileFound = mob
					mob["brand"] = br
					mob["owner"] = ow
					mob["price"] = pr
					break
			if mobileFound:
				return {"message":"Mobile Updated Successfully!"}
			else:
				return {"message":"Mobile Not Found!"}
		
		def removeMobile(self,id):
			mobileFound = None
			for mob in self.mobileList:
				if mob["id"] == str(id):
					mobileFound = mob
					self.mobileList.remove(mob)
					break
			if mobileFound:
				return {"message":"Mobile Deleted Successfully!"}
			else:
				return {"message":"Mobile Not Found!"}


Create Table mobile in MySQL
	CREATE TABLE mobile (id BIGINT PRIMARY KEY AUTO_INCREMENT,
	brand VARCHAR(30),
	owner VARCHAR(40),
	price DECIMAL(10,2));


Install mysql 
	pip install mysql-connector-python

Create file db_repository.py 
	import mysql.connector

	class MobileRepository:
		def open_connection(self):
			try:
				self.connection = mysql.connector.connect(
					host="localhost",
					user="root",
					password="Admin@123",
					database="john_mobile"
				)
			except mysql.connector.Error as err:
				print(f"Error connecting to MySQL: {err}")
				
		def __init__(self):
			pass
			
		def readMobiles(self):
			self.open_connection()
			cursor = self.connection.cursor(dictionary=True)
			try:
				sql="SELECT id,brand,owner,price FROM mobile"
				cursor.execute(sql)
				res=cursor.fetchall()
				return res
			except mysql.connector.Error as err:
				print(f"Error executing query: {err}")
				self.connection.rollback()
				return None
			finally:
				cursor.close()
				self.connection.close()
			return res
		
		def insertMobile(self,br,ow,pr):
			self.open_connection()
			cursor = self.connection.cursor(dictionary=True)
			try:
				sql="INSERT INTO mobile (brand,owner,price) VALUES (%s,%s,%s)"
				cursor.execute(sql,(br,ow,pr))
				self.connection.commit()
				return {"message":"Mobile Created Successfully"}
			except mysql.connector.Error as err:
				self.connection.rollback()
				return {"message":f"Error executing insert query: {err}"}
			finally:
				cursor.close()
				self.connection.close()
		
		
		def modifyMobile(self,id,br,ow,pr):
			self.open_connection()
			cursor = self.connection.cursor(dictionary=True)
			try:
				sql="UPDATE mobile SET brand=%s, owner=%s, price=%s WHERE id=%s"
				cursor.execute(sql,(br,ow,pr,id))
				self.connection.commit()
				return {"message":"Mobile Updated Successfully"}
			except mysql.connector.Error as err:
				self.connection.rollback()
				return {"message":f"Error executing update query: {err}"}
			finally:
				cursor.close()
				self.connection.close()

		def readMobile(self,id):
			self.open_connection()
			cursor = self.connection.cursor(dictionary=True)
			try:
				sql="SELECT * FROM mobile WHERE id = %s"
				cursor.execute(sql,(id,))
				res=cursor.fetchone()
				return res
			except mysql.connector.Error as err:
				print(f"Error executing read query: {err}")
				self.connection.rollback()
				return None
			finally:
				cursor.close()
				self.connection.close()
			return res
			
		def removeMobile(self,id):
			self.open_connection()
			cursor = self.connection.cursor(dictionary=True)
			try:
				sql="DELETE FROM mobile WHERE id = %s"
				cursor.execute(sql,(id,))
				self.connection.commit()
				return {"message":"Mobile Deleted Successfully"}
			except mysql.connector.Error as err:
				self.connection.rollback()
				return {"message":f"Error executing Delete query: {err}"}
			finally:
				cursor.close()
				self.connection.close()
			return res
			

Command Prompt -> pip install flask

Create file rest_app.py
	from flask import Flask,jsonify,request
	from db_repository import MobileRepository

	app=Flask(__name__)
	repo=MobileRepository()

	@app.route('/')
	def showTitle():
		return jsonify({"message":"Mobile Store Application"})

	@app.route('/readmobiles',methods=['GET'])
	def readMobiles():
		return jsonify(repo.readMobiles())

	@app.route('/readmobile/<string:id>',methods=['GET'])
	def readMobile(id):
		return jsonify(repo.readMobile(id))


	@app.route('/createmobile',methods=['POST'])
	def createMobile():
		mob = request.get_json()
		repo.insertMobile(mob["brand"],mob["owner"],mob["price"])
		return jsonify({"message":"Mobile Created Successfully"})

	@app.route('/updatemobile',methods=['PUT'])
	def updateMobile():
		mob = request.get_json()
		repo.modifyMobile(mob["id"],mob["brand"],mob["owner"],mob["price"])
		return jsonify({"message":"Mobile Updated Successfully"})

	@app.route('/deletemobile/<string:id>',methods=['DELETE'])
	def deleteMobile(id):
		repo.removeMobile(id)
		return jsonify({"message":"Mobile Deleted Successfully"})



	if(__name__=='__main__'):
		app.run(debug=True)  

