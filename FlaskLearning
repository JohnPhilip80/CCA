Create browser_app.py file 
	from flask import Flask,render_template,url_for,redirect,request
	from db_repository import MobileRepository

	repo = MobileRepository()

	app=Flask(__name__)

	@app.route('/')
	@app.route('/home')
	def homePage():
		return render_template("home_page.html")

	@app.route('/aboutus')
	def aboutusPage():
		return render_template("aboutus_page.html")

	@app.route('/contactus')
	def contactusPage():
		return render_template("contactus_page.html")

	@app.route('/login')
	def loginPage():
		return render_template("login_page.html")

	@app.route('/register')
	def registerPage():
		return render_template("register_page.html")

	@app.route('/readmobiles')
	def readMobiles():
		return render_template("read_mobiles.html",mobiles=repo.readMobiles())

	@app.route('/readmobile/<string:id>')
	def readMobile(id):
		return render_template("read_mobile.html",mob=repo.readMobile(id))

	@app.route('/createmobile',methods=['GET','POST'])
	def createMobile():
		if request.method == 'POST':
			repo.insertMobile(request.form['brand'],request.form['owner'],request.form['price'])
			return redirect(url_for('readMobiles'))
		return render_template("create_mobile.html")

	@app.route('/updatemobile/<string:id>',methods=['GET','POST'])
	def updateMobile(id):
		if request.method == 'POST':
			repo.modifyMobile(id,request.form['brand'],request.form['owner'],request.form['price'])
			return redirect(url_for('readMobiles'))
		return render_template("update_mobile.html",mob=repo.readMobile(id))

	@app.route('/deletemobile/<string:id>',methods=['GET','POST'])
	def deleteMobile(id):
		repo.removeMobile(id)
		return redirect(url_for('readMobiles'))

	if(__name__ == '__main__'):
		app.run(debug=True)
		
Security - Authentication and Authorization:		
create tables user,role and user_role in MySQL
	use john_mobile;
	/*create table user(id BIGINT primary key AUTO_INCREMENT,name varchar(30),email varchar(40),password VARCHAR(100));
	create table role(id BIGINT primary key AUTO_INCREMENT,name varchar(20),description varchar(30));*/

	create table user_role(userid BIGINT,roleid BIGINT,
	constraint fk_user foreign key(userid) references user(id) on delete cascade on update cascade,
	constraint fk_role foreign key(roleid) references role(id) on delete cascade on update cascade);



				  
